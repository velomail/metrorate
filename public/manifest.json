{
  "manifest_version": 3,
  "name": "MetroRate",
  "description": "Minimalist glassmorphic commission tracker side panel.",
  "version": "0.1.0",
  "permissions": ["storage", "sidePanel"],
  "icons": {
    "16": "icons/metrorate-logo-128.png",
    "32": "icons/metrorate-logo-128.png",
    "48": "icons/metrorate-logo-128.png",
    "128": "icons/metrorate-logo-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "MetroRate",
    "default_icon": {
      "16": "icons/metrorate-logo-128.png",
      "32": "icons/metrorate-logo-128.png",
      "48": "icons/metrorate-logo-128.png"
    }
  }
}

